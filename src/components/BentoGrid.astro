---
import { t } from '../i18n/utils';
import { getLanguageFromPath } from '../i18n/config';

const lang = getLanguageFromPath(Astro.url.pathname);
const tr = (key: string) => t(lang, key);
---

<section class="py-20 px-4 max-w-7xl mx-auto">
  <h2 class="text-4xl font-bold text-foreground mb-12 text-center">{tr('portfolio.title')}</h2>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 auto-rows-[300px]">
    
    <!-- Row 1: Large Left (2/3), Small Right (1/3) -->
    <div class="group relative md:col-span-2 rounded-3xl overflow-hidden bg-background-secondary border border-border hover:border-primary/50 transition-all duration-300 hover:shadow-lg hover:shadow-primary/10">
      <div class="absolute inset-0 bg-linear-to-br from-primary/10 to-secondary/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
      <div class="absolute inset-0 p-8 flex flex-col justify-between z-10">
        <div>
          <span class="inline-block px-3 py-1 rounded-full bg-primary/15 text-primary text-xs font-medium mb-4">{tr('portfolio.featured')}</span>
          <h3 class="text-3xl font-bold text-foreground mb-2">{tr('portfolio.ecommerce.title')}</h3>
          <p class="text-foreground-secondary max-w-md">{tr('portfolio.ecommerce.description')}</p>
        </div>
        <div class="flex items-center gap-4">
          <span class="px-3 py-1 rounded-lg bg-primary/10 border border-primary/20 text-primary text-sm font-medium">React</span>
          <span class="px-3 py-1 rounded-lg bg-secondary/10 border border-secondary/20 text-secondary text-sm font-medium">Node.js</span>
          <span class="px-3 py-1 rounded-lg bg-accent/10 border border-accent/20 text-accent text-sm font-medium">Tailwind</span>
        </div>
      </div>
      <!-- Decorative Element -->
      <div class="absolute right-0 bottom-0 w-1/2 h-4/5 bg-linear-to-tl from-primary/20 to-transparent rounded-tl-3xl border-t border-l border-primary/10 translate-y-4 translate-x-4 group-hover:translate-y-2 group-hover:translate-x-2 transition-transform duration-500"></div>
    </div>

    <div class="group relative md:col-span-1 rounded-3xl overflow-hidden bg-background-secondary border border-border hover:border-secondary/50 transition-all duration-300 hover:shadow-lg hover:shadow-secondary/10">
      <div class="absolute inset-0 flex items-center justify-center bg-linear-to-br from-primary/5 to-secondary/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
      <div class="absolute inset-0 p-8 flex flex-col justify-center items-center text-center z-10">
        <div class="w-20 h-20 rounded-full bg-linear-to-tr from-primary to-secondary mb-4 flex items-center justify-center text-3xl shadow-lg shadow-primary/30">ðŸ‘‹</div>
        <h3 class="text-xl font-bold text-foreground mb-2">{tr('portfolio.aboutMe.title')}</h3>
        <p class="text-foreground-secondary text-sm">{tr('portfolio.aboutMe.description')}</p>
      </div>
    </div>

    <!-- Row 2: Small Left (1/3), Large Right (2/3) -->
    <div class="group relative md:col-span-1 rounded-3xl overflow-hidden bg-background-secondary border border-border hover:border-primary/50 transition-all duration-300 hover:shadow-lg hover:shadow-primary/10">
      <div class="absolute inset-0 p-8 flex flex-col justify-between z-10">
        <h3 class="text-xl font-bold text-foreground">{tr('portfolio.stack.title')}</h3>
        <div class="grid grid-cols-2 gap-4 mt-4">
          <div class="flex flex-col items-center justify-center p-3 rounded-xl bg-primary/10 border border-primary/20 hover:bg-primary/15 transition-all duration-300">
            <div class="w-8 h-8 rounded bg-linear-to-br from-primary to-secondary/50 mb-2 shadow-md"></div>
            <span class="text-xs font-medium text-foreground-secondary">React</span>
          </div>
          <div class="flex flex-col items-center justify-center p-3 rounded-xl bg-secondary/10 border border-secondary/20 hover:bg-secondary/15 transition-all duration-300">
            <div class="w-8 h-8 rounded bg-linear-to-br from-secondary to-accent/50 mb-2 shadow-md"></div>
            <span class="text-xs font-medium text-foreground-secondary">Astro</span>
          </div>
          <div class="flex flex-col items-center justify-center p-3 rounded-xl bg-accent/10 border border-accent/20 hover:bg-accent/15 transition-all duration-300">
            <div class="w-8 h-8 rounded bg-linear-to-br from-accent to-primary/50 mb-2 shadow-md"></div>
            <span class="text-xs font-medium text-foreground-secondary">JS</span>
          </div>
          <div class="flex flex-col items-center justify-center p-3 rounded-xl bg-success/10 border border-success/20 hover:bg-success/15 transition-all duration-300">
            <div class="w-8 h-8 rounded bg-linear-to-br from-success to-primary/50 mb-2 shadow-md"></div>
            <span class="text-xs font-medium text-foreground-secondary">Node</span>
          </div>
        </div>
      </div>
    </div>

    <div class="group relative md:col-span-2 rounded-3xl overflow-hidden bg-background-secondary border border-border hover:border-success/50 transition-all duration-300 hover:shadow-lg hover:shadow-success/10">
      <div class="absolute inset-0 bg-linear-to-bl from-success/10 to-primary/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
      <div class="absolute inset-0 p-8 flex flex-col justify-between z-10">
        <div>
          <span class="inline-block px-3 py-1 rounded-full bg-success/15 text-success text-xs font-medium mb-4">{tr('portfolio.recent')}</span>
          <h3 class="text-3xl font-bold text-foreground mb-2">{tr('portfolio.finance.title')}</h3>
          <p class="text-foreground-secondary max-w-md">{tr('portfolio.finance.description')}</p>
        </div>
        <div class="flex items-center gap-4">
          <span class="px-3 py-1 rounded-lg bg-success/10 border border-success/20 text-success text-sm font-medium">React Native</span>
          <span class="px-3 py-1 rounded-lg bg-primary/10 border border-primary/20 text-primary text-sm font-medium">Firebase</span>
        </div>
      </div>
      <!-- Decorative Element -->
      <div class="absolute left-0 bottom-0 w-1/2 h-4/5 bg-linear-to-tr from-success/20 to-transparent rounded-tr-3xl border-t border-r border-success/10 translate-y-4 -translate-x-4 group-hover:translate-y-2 group-hover:-translate-x-2 transition-transform duration-500"></div>
    </div>

    <!-- Row 3: Large Left (2/3), Small Right (1/3) -->
    <div class="group relative md:col-span-2 rounded-3xl overflow-hidden bg-background-secondary border border-border hover:border-accent/50 transition-all duration-300 hover:shadow-lg hover:shadow-accent/10">
      <div class="absolute inset-0 bg-linear-to-br from-accent/10 to-primary/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
      <div class="absolute inset-0 p-8 flex flex-col justify-between z-10">
        <div>
          <span class="inline-block px-3 py-1 rounded-full bg-accent/15 text-accent text-xs font-medium mb-4">DiseÃ±o</span>
          <h3 class="text-3xl font-bold text-foreground mb-2">{tr('portfolio.design.title')}</h3>
          <p class="text-foreground-secondary max-w-md">{tr('portfolio.design.description')}</p>
        </div>
        <div class="flex items-center gap-4">
          <span class="px-3 py-1 rounded-lg bg-accent/10 border border-accent/20 text-accent text-sm font-medium">Figma</span>
          <span class="px-3 py-1 rounded-lg bg-secondary/10 border border-secondary/20 text-secondary text-sm font-medium">Storybook</span>
        </div>
      </div>
      <div class="absolute right-8 top-8 w-32 h-32 bg-linear-to-br from-accent/30 to-primary/20 rounded-full blur-3xl group-hover:blur-2xl transition-all duration-500 opacity-0 group-hover:opacity-100"></div>
    </div>

    <div class="group relative md:col-span-1 rounded-3xl overflow-hidden bg-background-secondary border border-border hover:border-accent/50 transition-all duration-300 hover:shadow-lg hover:shadow-accent/10">
      <div class="absolute inset-0 p-8 flex flex-col justify-center items-center text-center z-10">
        <h3 class="text-xl font-bold text-foreground mb-6">{tr('portfolio.social.title')}</h3>
        <div class="flex gap-4">
          <a href="#" class="p-3 rounded-full bg-primary/10 hover:bg-primary/20 border border-primary/20 transition-all duration-300 text-primary hover:shadow-lg hover:shadow-primary/30">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path></svg>
          </a>
          <a href="#" class="p-3 rounded-full bg-secondary/10 hover:bg-secondary/20 border border-secondary/20 transition-all duration-300 text-secondary hover:shadow-lg hover:shadow-secondary/30">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path></svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Row 4: Small Left (1/3), Large Right (2/3) -->
    <div class="group relative md:col-span-1 rounded-3xl overflow-hidden bg-background-secondary border border-border hover:border-success/50 transition-all duration-300 hover:shadow-lg hover:shadow-success/10">
      <div class="absolute inset-0 p-8 flex flex-col justify-between z-10">
        <h3 class="text-xl font-bold text-foreground">{tr('portfolio.services.title')}</h3>
        <ul class="space-y-3 mt-4">
          <li class="flex items-center gap-2 text-foreground-secondary text-sm">
            <span class="w-2 h-2 rounded-full bg-linear-to-r from-primary to-secondary"></span>
            {tr('portfolio.services.uiux')}
          </li>
          <li class="flex items-center gap-2 text-foreground-secondary text-sm">
            <span class="w-2 h-2 rounded-full bg-linear-to-r from-secondary to-accent"></span>
            {tr('portfolio.services.web')}
          </li>
          <li class="flex items-center gap-2 text-foreground-secondary text-sm">
            <span class="w-2 h-2 rounded-full bg-linear-to-r from-success to-primary"></span>
            {tr('portfolio.services.mobile')}
          </li>
        </ul>
      </div>
    </div>

    <div class="group relative md:col-span-2 rounded-3xl overflow-hidden bg-background-secondary border border-border hover:border-warning/50 transition-all duration-300 hover:shadow-lg hover:shadow-warning/10">
      <div class="absolute inset-0 bg-linear-to-bl from-warning/10 to-accent/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
      <div class="absolute inset-0 p-8 flex flex-col justify-between z-10">
        <div>
          <span class="inline-block px-3 py-1 rounded-full bg-warning/15 text-warning text-xs font-medium mb-4">Blog</span>
          <h3 class="text-3xl font-bold text-foreground mb-2">{tr('portfolio.blog.title')}</h3>
          <p class="text-foreground-secondary max-w-md">{tr('portfolio.blog.description')}</p>
        </div>
        <div class="flex items-center gap-2 text-sm text-foreground-secondary group-hover:text-primary transition-colors">
          {tr('portfolio.blog.readArticle')} <span class="group-hover:translate-x-1 transition-transform">â†’</span>
        </div>
      </div>
    </div>

  </div>
</section>
