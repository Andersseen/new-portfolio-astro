---
interface Props {
  id: string;
  colSpan?: 'md:col-span-1' | 'md:col-span-2';
}

const { id, colSpan = 'md:col-span-1' } = Astro.props;
---

<div data-swapy-slot={id} class={`group relative ${colSpan} rounded-3xl overflow-hidden bg-background-secondary border border-border hover:border-primary/50 transition-all duration-300 hover:shadow-lg hover:shadow-primary/10 cursor-grab active:cursor-grabbing`}>
  <div data-swapy-item={id} class="w-full h-full">
    <slot />
  </div>
</div>

<style>
  :global([data-swapy-slot]) {
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  :global([data-swapy-item]) {
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
</style>
