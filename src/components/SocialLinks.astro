---
interface SocialLink {
  icon: 'twitter' | 'github' | 'gitlab' | 'medium';
  url: string;
  color: 'primary' | 'secondary' | 'accent';
}

interface Props {
  links: SocialLink[];
}

const { links } = Astro.props;

const colorMap = {
  primary: { bg: 'bg-primary/10', hoverBg: 'hover:bg-primary/20', border: 'border-primary/20', text: 'text-primary', shadow: 'hover:shadow-primary/30' },
  secondary: { bg: 'bg-secondary/10', hoverBg: 'hover:bg-secondary/20', border: 'border-secondary/20', text: 'text-secondary', shadow: 'hover:shadow-secondary/30' },
  accent: { bg: 'bg-accent/10', hoverBg: 'hover:bg-accent/20', border: 'border-accent/20', text: 'text-accent', shadow: 'hover:shadow-accent/30' },
};
---

<div class="flex gap-4">
  {links.map((link) => {
    const colors = colorMap[link.color];
    return (
      <a href={link.url} class={`p-3 rounded-full ${colors.bg} ${colors.hoverBg} border ${colors.border} transition-all duration-300 ${colors.text} hover:shadow-lg ${colors.shadow}`}>
        {link.icon === 'github' && (
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
          </svg>
        )}
        {link.icon === 'gitlab' && (
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M23.955 13.487l-1.477-4.779a.75.75 0 0 0-.71-.561h-.001l-2.275-.008-1.605-5.02a.75.75 0 0 0-.714-.472.748.748 0 0 0-.71.464l-1.571 4.977H8.713l-1.57-4.977a.75.75 0 0 0-.71-.464.748.748 0 0 0-.714.472l-1.606 5.02-2.275.008h-.001a.75.75 0 0 0-.71.561l-1.477 4.779a.753.753 0 0 0 .272.839l9.906 7.215 9.906-7.215a.753.753 0 0 0 .272-.839Z"></path>
          </svg>
        )}
        {link.icon === 'medium' && (
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M2.5 3c-1.38 0-2.5 1.12-2.5 2.5v13c0 1.38 1.12 2.5 2.5 2.5h19c1.38 0 2.5-1.12 2.5-2.5v-13c0-1.38-1.12-2.5-2.5-2.5H2.5zm15.5 4v8c0 .55-.45 1-1 1s-1-.45-1-1V7c0-.55.45-1 1-1s1 .45 1 1zm-4 .5c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm6-1c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zM2 7c.55 0 1 .45 1 1v5c0 .55-.45 1-1 1s-1-.45-1-1V8c0-.55.45-1 1-1z"></path>
          </svg>
        )}
      </a>
    );
  })}
</div>
