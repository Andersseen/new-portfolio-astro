---
import "../styles/global.css";
---
<!doctype html>
<html lang="en" data-theme="light">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<button id="theme-toggle" class="fixed top-4 right-4 bg-[var(--color-primary)] text-[var(--color-foreground)] px-4 py-2 rounded z-50">
			Toggle Theme
		</button>
		<slot />
	</body>
</html>

<script>
	import '../scripts/theme-toggle.ts';
</script>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
